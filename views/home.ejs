<%- include('partials/header') %>


<div class="stopwatch">
  <h1><span class="gold">CZAS</span> GRY</h1>
  <div class="circle">
    <span class="time" id="display">00:00:00</span>
  </div>

  <div class="controls">
    <button class="buttonPlay">
      <img id="playButton" src="https://res.cloudinary.com/https-tinloof-com/image/upload/v1593360448/blog/time-in-js/play-button_opkxmt.svg" />

      <img id="pauseButton" src="https://res.cloudinary.com/https-tinloof-com/image/upload/v1593360448/blog/time-in-js/pause-button_pinhpy.svg" />
    </button>

    <button class="buttonReset">
      <img id="resetButton" src="https://res.cloudinary.com/https-tinloof-com/image/upload/v1593360448/blog/time-in-js/reset-button_mdv6wf.svg" />
    </button>
  </div>
</div>
<div class="stopwatch2">
  <h1><span class="gold">POZOSTAŁY CZAS</span> GRY</h1>
  <div class="circle">
    <span class="time" id="timeremaining"><%=timeInString %></span>
  </div>
  <div class="reczne">
    <h2>Dodaj ręcznie czas gry:</h2>
    <form action="/manual" method='post'>
    <input type="text" name="H" width="4">h <input type="text" name="M" width="4">min
    <input type="submit" value="Dodaj uzycie" class="btn success">
  </form>

  <button id="dailyButton" class="btn success fullwidth">Dodaj dzienny czas</button>
    </div>
  </div>
</div>

<script src="js/stoper.js"></script>

<%- include('partials/footer') %>
